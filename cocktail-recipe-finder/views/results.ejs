<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Cocktail Finder</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/random">Random Cocktail</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Results Header -->
  <div class="bg-light py-4">
    <div class="container">
      <h2 class="mb-2">Search Results</h2>
      <p class="text-muted mb-0">
        Found <%= cocktails.length %> cocktail<%= cocktails.length !== 1 ? 's' : '' %> 
        <% if (searchType === 'name') { %>
          matching "<strong><%= searchQuery %></strong>"
        <% } else { %>
          containing "<strong><%= searchQuery %></strong>"
        <% } %>
      </p>
      <a href="/" class="btn btn-sm btn-outline-primary mt-2">‚Üê New Search</a>
    </div>
  </div>

  <!-- Results Grid -->
  <div class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% cocktails.forEach(cocktail => { %>
        <div class="col">
          <div class="card h-100 shadow-sm cocktail-card">
            <!-- Cocktail Image -->
            <img 
              src="<%= cocktail.strDrinkThumb %>" 
              class="card-img-top" 
              alt="<%= cocktail.strDrink %>"
              style="height: 250px; object-fit: cover;">
            
            <div class="card-body d-flex flex-column">
              <!-- Cocktail Name -->
              <h5 class="card-title"><%= cocktail.strDrink %></h5>
              
              <!-- Category and Type (if available) -->
              <% if (cocktail.strCategory) { %>
                <p class="card-text text-muted small mb-2">
                  <span class="badge bg-secondary"><%= cocktail.strCategory %></span>
                  <% if (cocktail.strAlcoholic) { %>
                    <span class="badge bg-info"><%= cocktail.strAlcoholic %></span>
                  <% } %>
                </p>
              <% } %>
              
              <!-- View Details Button -->
              <div class="mt-auto">
                <a href="/cocktail/<%= cocktail.idDrink %>" class="btn btn-primary w-100">
                  View Recipe
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- No Results Message (fallback) -->
    <% if (cocktails.length === 0) { %>
      <div class="text-center py-5">
        <h3>No cocktails found</h3>
        <p class="text-muted">Try searching with different keywords</p>
        <a href="/" class="btn btn-primary">Back to Search</a>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">Powered by <a href="https://www.thecocktaildb.com/" target="_blank" class="text-light">TheCocktailDB API</a></p>
      <p class="small text-muted mb-0">Drink responsibly. Must be 21+ to consume alcohol.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>