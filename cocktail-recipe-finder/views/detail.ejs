<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Cocktail Finder</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/random">Random Cocktail</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cocktail Detail -->
  <div class="container my-5">
    <div class="row">
      <!-- Back Button -->
      <div class="col-12 mb-3">
        <button onclick="history.back()" class="btn btn-outline-secondary">‚Üê Back</button>
      </div>

      <!-- Cocktail Image -->
      <div class="col-md-5 mb-4">
        <img 
          src="<%= cocktail.strDrinkThumb %>" 
          class="img-fluid rounded shadow-lg" 
          alt="<%= cocktail.strDrink %>">
      </div>

      <!-- Cocktail Information -->
      <div class="col-md-7">
        <h1 class="display-4 mb-3"><%= cocktail.strDrink %></h1>
        
        <!-- Tags -->
        <div class="mb-4">
          <span class="badge bg-secondary fs-6 me-2"><%= cocktail.strCategory %></span>
          <span class="badge bg-info fs-6 me-2"><%= cocktail.strAlcoholic %></span>
          <% if (cocktail.strGlass) { %>
            <span class="badge bg-dark fs-6">ü•É <%= cocktail.strGlass %></span>
          <% } %>
        </div>

        <!-- Ingredients Section -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Ingredients</h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mb-0">
              <% 
                for (let i = 1; i <= 15; i++) {
                  const ingredient = cocktail[`strIngredient${i}`];
                  const measure = cocktail[`strMeasure${i}`];
                  
                  if (ingredient && ingredient.trim() !== '') {
              %>
                <li class="mb-2">
                  <span class="badge bg-light text-dark me-2">‚úì</span>
                  <strong><%= measure ? measure.trim() : '' %></strong> <%= ingredient %>
                </li>
              <% 
                  }
                }
              %>
            </ul>
          </div>
        </div>

        <!-- Instructions Section -->
        <div class="card">
          <div class="card-header bg-success text-white">
            <h4 class="mb-0">Instructions</h4>
          </div>
          <div class="card-body">
            <p class="lead mb-0"><%= cocktail.strInstructions %></p>
          </div>
        </div>

        <!-- Additional Actions -->
        <div class="mt-4 d-flex gap-2">
          <a href="/random" class="btn btn-outline-primary">
            Try Another Random Cocktail
          </a>
          <a href="/" class="btn btn-outline-secondary">
            New Search
          </a>
        </div>
      </div>
    </div>

    <!-- Optional: Video Tutorial -->
    <% if (cocktail.strVideo) { %>
      <div class="row mt-5">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4 class="mb-0">Video Tutorial</h4>
            </div>
            <div class="card-body">
              <div class="ratio ratio-16x9">
                <% 
                  // Convert YouTube URL to embed format
                  let videoUrl = cocktail.strVideo;
                  if (videoUrl.includes('youtube.com/watch?v=')) {
                    const videoId = videoUrl.split('v=')[1].split('&')[0];
                    videoUrl = `https://www.youtube.com/embed/${videoId}`;
                  }
                %>
                <iframe src="<%= videoUrl %>" allowfullscreen></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">Powered by <a href="https://www.thecocktaildb.com/" target="_blank" class="text-light">TheCocktailDB API</a></p>
      <p class="small text-muted mb-0">Drink responsibly. Must be 21+ to consume alcohol.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>